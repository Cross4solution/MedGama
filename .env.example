# MedGama Environment Variables
# Copy this file to .env and fill in the values

# Backend API base URL (local dev: http://127.0.0.1:8001/api, production: https://api.medgama.com/api)
REACT_APP_API_BASE=http://127.0.0.1:8001/api

# Auth endpoint (default: /api/auth/me)
REACT_APP_API_ME=/api/auth/me

# Google Login endpoint (default: /api/login/google)
REACT_APP_API_LOGIN_GOOGLE=/api/login/google

# WebSocket URL (for real-time features)
REACT_APP_WS_URL=

# Pusher (cloud WebSocket) — use if deploying with Pusher/Ably
REACT_APP_PUSHER_APP_KEY=
REACT_APP_PUSHER_CLUSTER=eu

# Laravel Reverb (self-hosted WebSocket) — use if running Reverb locally
REACT_APP_REVERB_APP_KEY=
REACT_APP_REVERB_HOST=127.0.0.1
REACT_APP_REVERB_PORT=8080

# Google OAuth Client ID
REACT_APP_GOOGLE_CLIENT_ID=

# Enable mock data (true/false)
REACT_APP_ENABLE_MOCK=false
